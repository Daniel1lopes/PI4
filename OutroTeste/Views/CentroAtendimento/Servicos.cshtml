@model List<OutroTeste.Models.Servico>

<!DOCTYPE html>
<html>
<head>
    <title>Serviços</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
        <div class="d-flex flex-wrap">
            <div class="m-1 w-100 text-center">
                <h2>Selecione o Serviço</h2>
            </div>
            <div class="m-1 w-100 text-center">
                <h3>@ViewBag.EspecialidadeNome</h3>

            </div>


            @foreach (var servico in Model)
            {
                <div class="d-flex m-1 container" style="flex: 1;">
                    <a class="btn btn-primary btn-block" href="@Url.Action("UnidadesAtendimento", "CentroAtendimento", new { centroId = 1, servicoId = servico.idServico })">@servico.deServico</a>
                </div>
            }

        </div>
    </div>
    <div class="text-center mt-3">
        <a class="btn btn-secondary" href="javascript:history.back()">Voltar</a>
    </div>
</body>
</html>
